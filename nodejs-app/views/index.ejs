    <script>
        var countBox = 3;
        var boxName = 0;
        function addInput() {
            var boxName = "ingredient" + countBox;
            var submit_btn = document.getElementById('add_ing');
            var new_ing = '<div class="w3-margin" id="ingredient_div' + countBox + '"><input type="text" class="w3-border w3-round-large w3-padding" name="ingredient' + boxName + '"></div>'
            submit_btn.insertAdjacentHTML('beforebegin', new_ing);
            countBox += 1;
        }
        function removeInput() {
            if (countBox == 2) return;
            countBox -= 1;
            var name = 'ingredient_div' + countBox;
            document.getElementById(name).remove();
        }
    </script>
